{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true, // for BWC
    "declaration": false,
    "allowJs": true,
    "noEmit": true,    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es7"
    ],
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "paths": {
      "@app/*": [ "./src/app/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/lib"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}