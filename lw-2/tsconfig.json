{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "allowJs": true,    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/lib/**/*.js"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}