{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@merit/common/*": ["./*"],
      "@app/env": ["../mobile/src/environments/environment"],
      "@angular/*": ["../mobile/node_modules/@angular/*"],
      "@ionic-native/*": ["../mobile/node_modules/@ionic-native/*"],
      "@ngx-translate/*": ["../mobile/node_modules/@ngx-translate/*"],
      "ionic-angular/*": ["../mobile/node_modules/ionic-angular/*"],
      "rxjs/*": ["../mobile/node_modules/rxjs/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
