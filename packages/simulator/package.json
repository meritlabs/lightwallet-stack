{
  "name": "merit-simulator",
  "description": "Merit LightWallet application",
  "authors": [
    "Merit Foundation"
  ],
  "version": "1.1.0",
  "homepage": "https://github.com/meritlabs/lightwallet-stack",
  "license": "MIT",
  "keywords": [
    "merit",
    "wallet",
    "lightwallet",
    "labs",
    "mrt",
    "multisignature",
    "bitcore"
  ],
  "contributors": [
    {
      "name": "Merit Foundation",
      "email": "support@merit.me"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meritlabs/lightwallet-stack"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register index.ts",
    "test": "jest"
  },
  "dependencies": {
    "bip38": "^1.3.0",
    "bitcore-lib": "^0.9.9",
    "bitcore-payment-protocol": "^1.2.2",
    "buffer-compare": "^1.1.1",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "elliptic": "^6.4.0",
    "file-saver": "1.3.3",
    "inquirer": "^6.1.0",
    "ora": "^3.0.0",
    "shortid": "^2.2.12"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/file-saver": "^1.3.0",
    "@types/inquirer": "0.0.42",
    "@types/jest": "^23.3.1",
    "@types/lodash": "4.14.71",
    "@types/ora": "^1.3.4",
    "@types/shortid": "0.0.29",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.5.0",
    "typescript": "^3.0.1"
  },
  "bin": {
    "merit-sim": "./index.js"
  },
  "jest": {
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@merit\\/common\\/([a-zA-Z0-9_\\.\\-\\/]+)$": "<rootDir>/../lightwallet/common/$1",
      "@app/env": "<rootDir>/../lightwallet/common/environments/environment.example.ts"
    }
  }
}
