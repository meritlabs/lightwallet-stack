{
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "es5",
      "lib": [
        "es2017","es2015","dom","es6"
      ],
      "baseUrl": "./",
      "paths": {
        "@merit/common/*": ["./lightwallet/common/*"],
        "@app/env": ["./lightwallet/common/environments/environment.dev"]
      },
      "module": "commonjs",
      "outDir": "./",
      "sourceMap": false,
      "strict": false,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node",
        "file-saver"
      ]
    },
    "include": [
      "**.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": false
  }
  